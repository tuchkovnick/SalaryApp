<Window x:Class="SalaryApp.PasswordCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryApp"
        mc:Ignorable="d"
        Title="Введите пароль" Height="185.95" Width="310.95" ResizeMode="NoResize" KeyUp="Window_KeyUp">
    <Grid>
        <StackPanel Margin="20">
            <PasswordBox Name="pb"  Width="200" Height="25" ToolTip="(Подсказка: имя пользователя | Admin)"/>
            <Button Height="40" Width=" 100" Margin="20" Content="Ок!" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
